@model Article

@{
    ViewData["Title"] = "Smazání článku";
}

<h2>Smazání článku</h2>

<h3>Jste si jisti, že chcete smazat tento článek?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Název:</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Obsah:</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Vytvořeno:</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-controller="Article" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Potvrdit smazání</button>
        <a href="@Url.Action("Index", "Article")" class="btn btn-secondary">Storno</a>
    </form>
</div>
